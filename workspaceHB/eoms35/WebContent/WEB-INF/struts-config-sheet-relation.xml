<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans> 
		
	 <form-bean name="sheetRelationForm"
      type="com.boco.eoms.sheet.tool.relation.webapp.form.TawSheetRelationForm"
      />
	</form-beans>
	 <!-- ========== Global Exceptions Definitions =================================== -->
      <global-exceptions>
        <exception type="java.lang.Exception"
            key="errors.general"
            handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
     </global-exceptions>

 	<!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
   
   <action
      path="/sheetRelation"
      type="com.boco.eoms.sheet.tool.relation.webapp.action.TawSheetRelationAction"
      name="sheetRelationForm"
      scope="request"
      input="mainMenu"
      parameter="method"
      unknown="false"
      validate="false"
    >
    
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="showInvokeRelationShipList"
        path="/WEB-INF/pages/sheetRelation/invokeRelationShipList.jsp"
        redirect="false"
        contextRelative="true"
      />
    </action>
	</action-mappings>
	
 <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    
      <message-resources parameter="config/ApplicationResources-sheet" key="sheet"/>
	  <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config>
