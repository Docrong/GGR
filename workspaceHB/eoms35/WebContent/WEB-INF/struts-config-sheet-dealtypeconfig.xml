<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>

        <form-bean name="dealTypeConfigForm"
                   type="com.boco.eoms.sheet.dealtypeconfig.webapp.form.DealTypeConfigForm"
        />
    </form-beans>
    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception"
                   key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward name="error"
                 path="/WEB-INF/pages/dealtypeconfig/failure.jsp"
                 contextRelative="true"/>
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <action
                path="/dealtypeconfig"
                type="com.boco.eoms.sheet.dealtypeconfig.webapp.action.DealTypeConfigAction"
                name="dealTypeConfigForm"
                scope="request"
                input="error"
                parameter="method"
                unknown="false"
                validate="false"
        >
            <set-property property="cancellable" value="true"/>
            <forward
                    name="input"
                    path="/WEB-INF/pages/dealtypeconfig/dealTypeConfigForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="list"
                    path="/WEB-INF/pages/dealtypeconfig/dealTypeConfigList.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward name="success"
                     path="/WEB-INF/common/success.jsp"
                     redirect="false" contextRelative="true"/>
        </action>
    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/ApplicationResources-sheet"
                       key="sheet"/>
    <message-resources parameter="config/ApplicationResources-sheet-dealtypeconfig" key="dealtypeconfigRes"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config>
