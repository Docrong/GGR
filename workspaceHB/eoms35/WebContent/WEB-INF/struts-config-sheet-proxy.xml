<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>

        <form-bean name="proxyForm"
                   type="com.boco.eoms.sheet.proxy.webapp.form.ProxyForm"
        />
    </form-beans>
    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception"
                   key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>

        <action
                path="/Proxy"
                type="com.boco.eoms.sheet.proxy.webapp.action.ProxyAction"
                name="proxyForm"
                scope="request"
                input="mainMenu"
                parameter="method"
                unknown="false"
                validate="false"
        >

            <set-property
                    property="cancellable"
                    value="true"
            />
            <forward
                    name="edit"
                    path="/WEB-INF/pages/proxy/proxyForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="list"
                    path="/WEB-INF/pages/proxy/proxyList.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="search"
                    path="/Proxy.do"
                    redirect="true"

            />
        </action>
        <action
                path="/editSheetProxy"
                type="com.boco.eoms.sheet.proxy.webapp.action.ProxyAction"
                name="proxyForm"
                scope="request"
                input="list"
                parameter="method"
                unknown="false"
                validate="false"
        >
            <set-property
                    property="cancellable"
                    value="true"
            />
            <forward
                    name="edit"
                    path="/WEB-INF/pages/proxy/proxyForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="list"
                    path="/WEB-INF/pages/proxy/proxyList.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="search"
                    path="/Proxy.do"
                    redirect="true"

            />
        </action>
        <action
                path="/saveSheetProxy"
                type="com.boco.eoms.sheet.proxy.webapp.action.ProxyAction"
                name="proxyForm"
                scope="request"
                input="edit"
                parameter="method"
                unknown="false"
                validate="false"
        >
            <set-property
                    property="cancellable"
                    value="true"
            />
            <forward
                    name="edit"
                    path="/WEB-INF/pages/proxy/proxyForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="list"
                    path="/WEB-INF/pages/proxy/proxyList.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="search"
                    path="/Proxy.do"
                    redirect="true"

            />
        </action>
    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>

    <message-resources parameter="config/ApplicationResources-sheet-proxy" key="proxy"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config>
