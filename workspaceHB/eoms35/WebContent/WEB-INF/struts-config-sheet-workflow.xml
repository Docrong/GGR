<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

    <!-- ========== Data Sources Definitions =================================== -->
    <!--
      Define your Struts data sources in a file called struts-data-sources.xml and place
      it in your merge directory.
    -->

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>

        <form-bean
                name="multiPageForm"
                type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm"
        />
        <!--bean for WorkPlanProcess end-->
    </form-beans>

    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception"
                   key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward name="error"
                 path="/WEB-INF/pages/wfworksheet/common/sheet_fail.jsp"
                 contextRelative="true"/>
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <!-- bigactivity action begin -->
        <action
                path="/workflow"
                type="com.boco.eoms.sheet.base.webapp.action.WorkflowAction"
                name="multiPageForm"
                scope="request"
                input="error"
                parameter="method"
                unknown="false"
                validate="false" attribute="workflow"
        >
            <set-property
                    property="cancellable"
                    value="true"
            />
        </action>

        <action
                path="/authentication"
                type="com.boco.eoms.sheet.interfaceBase.action.AuthenticationAction"
                name="multiPageForm"
                scope="request"
                input="error"
                parameter="method"
                unknown="false"
                validate="false"
        >
            <forward name="errAuthentication"
                     path="/WEB-INF/pages/wfworksheet/common/authenticationPage.jsp"
                     redirect="false" contextRelative="true"/>
        </action>

    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/ApplicationResources-sheet" key="sheet"/>
    <message-resources parameter="config/ApplicationResources-statistic" key="statistic"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>