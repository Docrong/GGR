    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <!--
            <exception type="java.lang.Exception" key="errors.general"
            handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler" />
        -->
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="mainMenu" path="/mainMenu.do" redirect="true"/>
        <forward
                name="success"
                path="/common/success.jsp"
                redirect="false"
                contextRelative="true"
        />
        <forward
                name="fail"
                path="/common/fail.jsp"
                redirect="false"
                contextRelative="true"
        />
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->


    <action-mappings>

        <action
                path="/evaTrees"
                type="com.boco.eoms.eva.webapp.action.EvaTreeAction"
                scope="request"
                name="evaTreeForm"
                input="mainMenu"
                parameter="method"
                unknown="false"
                validate="false"
        >
            <set-property
                    property="cancellable"
                    value="true"
            />
            <forward
                    name="evaKpiTree"
                    path="/WEB-INF/pages/eva/evaTree/evaKpiTree.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="newNode"
                    path="/WEB-INF/pages/eva/evaTree/evaTreeForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
            <forward
                    name="editNode"
                    path="/WEB-INF/pages/eva/evaTree/evaTreeForm.jsp"
                    redirect="false"
                    contextRelative="true"
            />
        </action>

        <action
