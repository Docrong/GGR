					path="/WEB-INF/pages/wfworksheet/commonchangedeploy/history.jsp"
					redirect="false" contextRelative="true" />		   
				<forward name="newMaindetail"
					path="/WEB-INF/pages/wfworksheet/commonchangedeploy/detail.jsp"
					redirect="false" contextRelative="true" />
				<forward name="newTransfer"
					path="/WEB-INF/pages/wfworksheet/common/sheet/transfer.jsp"	
					redirect="false" contextRelative="true" />
