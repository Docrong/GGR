<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

    <!-- ========== Data Sources Definitions =================================== -->
    <!--
        Define your Struts data sources in a file called struts-data-sources.xml and place
        it in your merge directory.
    -->

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="multiPageForm"
                   type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm"/>
        <!--bean for EsmProcess end-->
    </form-beans>

    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception" key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward name="error"
                 path="/WEB-INF/pages/wfworksheet/common/sheet_fail.jsp"
                 contextRelative="true"/>
        <forward name="nopriv"
                 path="/sheetPriv.jsp"
                 contextRelative="true"/>
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>


        <action path="/userdefinegroup"
                type="com.boco.eoms.sheet.userdefinegroup.webapp.action.UserdefineGroupAction"
                name="multiPageForm" scope="request" input="error" parameter="method"
                unknown="false" validate="false" attribute="UserdefineGroup">
            <set-property property="cancellable" value="true"/>
            <forward name="showUserdefineGroupPage"
                     path="/WEB-INF/pages/wfworksheet/userdefineGroup/userdefineGroupPage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="success"
                     path="/WEB-INF/pages/wfworksheet/common/successMessage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="list"
                     path="/WEB-INF/pages/wfworksheet/userdefineGroup/userdefineGroupList.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="workflows"
                     path="/WEB-INF/pages/wfworksheet/userdefineGroup/workflows.jsp"
                     redirect="false" contextRelative="true"/>
            <!-- 子角色树模板 -->
            <forward name="tpl-floder-xtree" path="/WEB-INF/pages/wfworksheet/userdefineGroup/tpl-floder-xtree.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="tpl-role-dept-user-xtree"
                     path="/WEB-INF/pages/wfworksheet/userdefineGroup/tpl-content-xtree.jsp" redirect="false"
                     contextRelative="true"/>
        </action>

    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/ApplicationResources-sheet"
                       key="sheet"/>
    <message-resources
            parameter="config/ApplicationResources-sheet-complaint" key="complaint"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>