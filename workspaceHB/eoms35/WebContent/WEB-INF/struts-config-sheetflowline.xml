<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<!-- ========== Data Sources Definitions =================================== -->
	<!--
		Define your Struts data sources in a file called struts-data-sources.xml and place
		it in your merge directory.
	-->

	<!-- ========== Form Bean Definitions =================================== -->
	<form-beans>
		<form-bean name="multiPageForm"
			type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm" />
		<!--bean for EsmProcess end-->
	</form-beans>

	<!-- ========== Global Exceptions Definitions =================================== -->
	<global-exceptions>
		<exception type="java.lang.Exception" key="errors.general"
			handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler" />
	</global-exceptions>

	<!-- ========== Global Forward Definitions =================================== -->
	<global-forwards>
		<forward name="selectFile" path="/selectFile.do" />
		<forward name="logout" path="/logout.jsp" />
		<forward name="error"
			path="/WEB-INF/pages/wfworksheet/common/sheet_fail.jsp"
			contextRelative="true" />
		<forward name="nopriv"
			path="/sheetPriv.jsp"
			contextRelative="true" />
	</global-forwards>

	<!-- ========== Action Mapping Definitions =================================== -->
	<action-mappings>
		<action path="/preAllocated"
			type="com.boco.eoms.sheetflowline.webapp.action.PreAllocatedAction"
			 scope="request" input="error" parameter="method"
			unknown="false" validate="false" >
			<set-property property="cancellable" value="true" />
			<forward name="add"
				path="/WEB-INF/pages/sheetflowline/preallocated/add.jsp"
				redirect="false" contextRelative="true" />
			<forward name="success"
				path="/WEB-INF/pages/sheetflowline/preallocated/success.jsp"
				redirect="false" contextRelative="true" />
		    <forward name="list"
				path="/WEB-INF/pages/sheetflowline/preallocated/list.jsp"
				redirect="false" contextRelative="true" />	
			<forward name="query"
				path="/WEB-INF/pages/sheetflowline/preallocated/query.jsp"
				redirect="false" contextRelative="true" />
			<forward name="import"
				path="/WEB-INF/pages/sheetflowline/preallocated/messageimport.jsp"
				redirect="false" contextRelative="true" />
			
			
		 </action>
		<action path="/autoDealsop"
			type="com.boco.eoms.sheetflowline.webapp.action.AutoDealSOPAction"
			name="multiPageForm" scope="request" input="error" parameter="method"
			unknown="false" validate="false" >
			<set-property property="cancellable" value="true" />
			<forward name="add"
				path="/WEB-INF/pages/sheetflowline/autodeal/add.jsp"
				redirect="false" contextRelative="true" />
			<forward name="success"
				path="/WEB-INF/pages/sheetflowline/autodeal/success.jsp"
				redirect="false" contextRelative="true" />
		    <forward name="list"
				path="/WEB-INF/pages/sheetflowline/autodeal/list.jsp"
				redirect="false" contextRelative="true" />	
			<forward name="query"
				path="/WEB-INF/pages/sheetflowline/autodeal/query.jsp"
				redirect="false" contextRelative="true" />
			<forward name="tranferadd"
				path="/WEB-INF/pages/sheetflowline/autodeal/tranferadd.jsp"
				redirect="false" contextRelative="true" />
			<forward name="holdadd"
				path="/WEB-INF/pages/sheetflowline/autodeal/holdadd.jsp"
				redirect="false" contextRelative="true" />
			
			
		 </action>

	</action-mappings>

	<controller nocache="true" inputForward="true" maxFileSize="2M" />
	<message-resources parameter="config/ApplicationResources-sheet"
		key="sheet" />

	<!-- ========== Validator plugin ===================  -->
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml" />
	</plug-in>

</struts-config>