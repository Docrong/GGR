<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

    <!-- ========== Data Sources Definitions =================================== -->
    <!--
        Define your Struts data sources in a file called struts-data-sources.xml and place
        it in your merge directory.
    -->

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean
                name="statForm"
                type="com.boco.eoms.commons.statistic.base.webapp.form.StatForm"
        />

    </form-beans>

    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception" key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward
                name="fail"
                path="/common/fail.jsp"
                redirect="false"
                contextRelative="true"
        />
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <action path="/stat"
                type="com.boco.eoms.commons.statistic.netdata.webapp.action.NetdataAction"
                name="statForm" scope="request" parameter="method"
                unknown="false" validate="false" attribute="netdataStatMethod">
            <set-property property="cancellable" value="true"/>
            <!-- 显示工单查询页面 -->
            <forward name="std_kpi_statistic"
                     path="/WEB-INF/pages/statistic/netdata/std_kpi/statistic.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示工单结果页面 -->
            <forward name="statisticresult"
                     path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示地州统计工单详细信息页面 sheet-->
            <forward name="std_kpi_statisticsheetlist"
                     path="/WEB-INF/pages/statistic/netdata/std_kpi/list.jsp" redirect="false"
                     contextRelative="true"/>

            <!-- 变更管理-网络数据管理流程-KPI-1 -->
            <!-- 显示工单查询页面 -->
            <forward name="onetimepass_kpi1_statistic"
                     path="/WEB-INF/pages/statistic/netdata/onetimepass_kpi1/statistic.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示工单结果页面 -->
            <forward name="statisticresult" path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示统计工单详细信息页面 sheet-->
            <forward name="onetimepass_kpi1_statisticsheetlist"
                     path="/WEB-INF/pages/statistic/netdata/onetimepass_kpi1/list.jsp" redirect="false"
                     contextRelative="true"/>


            <!-- 变更管理-网络数据管理流程-KPI-3 -->
            <!-- 显示工单查询页面 -->
            <forward name="efficiency_kpi3_statistic"
                     path="/WEB-INF/pages/statistic/netdata/efficiency_kpi3/statistic.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示工单结果页面 -->
            <forward name="statisticresult"
                     path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示统计工单详细信息页面 sheet-->
            <forward name="efficiency_kpi3_statisticsheetlist"
                     path="/WEB-INF/pages/statistic/netdata/efficiency_kpi3/list.jsp" redirect="false"
                     contextRelative="true"/>


            <!-- 网络配置-网络数据管理流程-KPI-1 -->
            <!-- 显示工单查询页面 -->
            <forward name="succeed_kpi1_statistic"
                     path="/WEB-INF/pages/statistic/netdata/succeed_kpi1/statistic.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示工单结果页面 -->
            <forward name="statisticresult"
                     path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示统计工单详细信息页面 sheet-->
            <forward name="succeed_kpi1_statisticsheetlist"
                     path="/WEB-INF/pages/statistic/netdata/succeed_kpi1/list.jsp" redirect="false"
                     contextRelative="true"/>


            <!-- 网络配置-网络数据管理流程-KPI-2 -->
            <!-- 显示工单查询页面 -->
            <forward name="intime_kpi2_statistic"
                     path="/WEB-INF/pages/statistic/netdata/intime_kpi2/statistic.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示工单结果页面 -->
            <forward name="statisticresult"
                     path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
                     contextRelative="true"/>
            <!-- 显示统计工单详细信息页面 sheet-->
            <forward name="intime_kpi2_statisticsheetlist"
                     path="/WEB-INF/pages/statistic/netdata/intime_kpi2/list.jsp" redirect="false"
                     contextRelative="true"/>
        </action>
    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/statistic/base-config/ApplicationResources-statistic"
                       key="statistic"/>
    <message-resources parameter="config/statistic/task-config/ApplicationResources-statistic-task"
                       key="statistictask"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>