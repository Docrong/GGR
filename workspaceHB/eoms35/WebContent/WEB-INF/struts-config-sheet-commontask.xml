                     path="/WEB-INF/pages/wfworksheet/commontask/phaseBackToUp.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="showDraftList" path="/commontask.do?method=showDraftList"/>
            <forward name="draftList" path="/WEB-INF/pages/wfworksheet/commontask/draftList.jsp" redirect="false"
                     contextRelative="true"/>
            <forward name="showWorkFlow"
                     path="/WEB-INF/pages/wfworksheet/common/workflowview.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="getLinkOperatePage"
                     path="/WEB-INF/pages/wfworksheet/common/linkOperatePage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="listall"
                     path="/WEB-INF/pages/wfworksheet/commontask/listcommontask.jsp"
                     redirect="false" contextRelative="true"/>
        </action>

    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/ApplicationResources-sheet"
                       key="sheet"/>
    <message-resources
            parameter="config/ApplicationResources-sheet-commontask" key="commontask"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>