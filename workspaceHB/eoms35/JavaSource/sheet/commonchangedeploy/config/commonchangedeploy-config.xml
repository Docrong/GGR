<?xml version="1.0" encoding="UTF-8"?>
<WorkFlowRule name="CommonChangeDeploy" description="通用变更配置工单">
  <flow-define id="CommonChangeDeployProcess" description="通用变更配置工单" tasknamespace="http://CommonChangeDeployProcess" linkservicename="iCommonChangeDeployLinkManager" dictfilename="dict-sheet-commonchangedeploy" name="">
    <phase-id id="receive" name="新建工单" type="operate" displaytransferaudit="false" displayconfirm="false" displayreject="false" displaycommonoperate="false">
      <to-phase-id id="DraftTask" role="dealPerformer@405" condition="${operateType}==22" operatetype="22" stepdisplay="true" workflowdisplay="true" isrejecttask="false" roleid="405" commonoperatetype="" name="保存草稿" />
      <to-phase-id id="AuditTask" role="dealPerformer@406" condition="${operateType}==0" operatetype="0" stepdisplay="true" workflowdisplay="true" isrejecttask="false" roleid="406" commonoperatetype="" name="提交审批" />
    </phase-id>
    <phase-id id="DraftTask" name="草稿" type="operate" displaytransferaudit="true" displayconfirm="false" displayreject="false" displaycommonoperate="false">
      <to-phase-id id="AuditTask" role="dealPerformer@406" condition="${operateType}==3" operatetype="3" stepdisplay="true" workflowdisplay="true" isrejecttask="false" roleid="406" commonoperatetype="" name="草稿提交审批" />
    </phase-id>
    <phase-id id="RejectTask" name="被驳回" type="operate" displaytransferaudit="false" displayconfirm="false" displayreject="false" displaycommonoperate="false">
      <to-phase-id id="AuditTask" role="dealPerformer@406" condition="${operateType}==54" operatetype="54" stepdisplay="true" workflowdisplay="true" isrejecttask="true" roleid="406" commonoperatetype="" name="重新派发" />
    </phase-id>
     <phase-id id="HoldTask" name="归档" type="operate" displaytransferaudit="false" displayconfirm="false" displayreject="false" displaycommonoperate="false" >
     	<to-phase-id id="OverTask" role="" condition="" operatetype="18" stepdisplay="true" workflowdisplay="false" isrejecttask="false"  roleid="" commonoperatetype="" name="归档"/>
     </phase-id>
    <phase-id id="AuditTask" name="待审核" type="operate" displaytransferaudit="true" displayconfirm="true" displayreject="true" displaycommonoperate="transference,phaseReply,split">
      <to-phase-id id="RejectTask" role="dealPerformer@405" condition="${operateType}==911" operatetype="911" stepdisplay="true" workflowdisplay="true" isrejecttask="true" roleid="405" commonoperatetype="" name="审批变更方案不通过" />
      <to-phase-id id="PlanTask" role="dealPerformer@407" condition="${operateType}==912" operatetype="912" stepdisplay="true" workflowdisplay="true" isrejecttask="false" roleid="407" commonoperatetype="" name="审批变更方案通过" />
    </phase-id>
    <phase-id id="PlanTask" name="排程中" type="operate" displaytransferaudit="false" displayconfirm="true" displayreject="true" displaycommonoperate="transference,phaseReply,split">
      <to-phase-id id="ImplementTask" role="dealPerformer@408" condition="${operateType}==92" operatetype="92" stepdisplay="true" workflowdisplay="true" isrejecttask="true" roleid="408" commonoperatetype="" name="排程并提交实施" />
     <to-phase-id id="AuditTask" role="" condition="${operateType}==4" operatetype="4" stepdisplay="false" workflowdisplay="false" isrejecttask="true" roleid=""  name="驳回上一级"/>
    </phase-id>
    <phase-id id="ImplementTask" name="实施中" type="operate" displaytransferaudit="false" displayconfirm="true" displayreject="true" displaycommonoperate="transference,phaseReply,split">
      <to-phase-id id="HoldTask" role="dealPerformer@405" condition="${operateType}==93" operatetype="93" stepdisplay="true" workflowdisplay="true" isrejecttask="true" roleid="405" commonoperatetype="" name="完成配置，反馈实施结果" />
    <to-phase-id id="PlanTask" role="" condition="${operateType}==4" operatetype="4" stepdisplay="false" workflowdisplay="false" isrejecttask="true" roleid=""  name="驳回上一级"/>
    </phase-id>
  </flow-define>
</WorkFlowRule>

