<?xml version="1.0" encoding="UTF-8"?>
<WorkFlowRule name="SoftwareLoadProcess" description="投诉督办">
    <flow-define id="SoftwareLoadProcess" description="投诉督办" tasknamespace="http://SoftwareLoadProcess"
                 linkservicename="SoftwareLoadProcess" dictfilename="softwareLoadProcesses" name="SoftwareLoadProcess">
        <phase-id id="" name="新增" type="operate" displaytransferaudit="false" displayconfirm="false"
                  displayreject="false" displaycommonoperate="false">
            <to-phase-id id="Assessor" role="dealPerformer@" condition="${operateType}==0" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="派单"/>
            <to-phase-id id="DraftTask" role="dealPerformer@" condition="${operateType}==22" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="保存草稿"/>
        </phase-id>
        <phase-id id="DraftTask" name="草稿" type="operate" displaytransferaudit="false" displayconfirm="false"
                  displayreject="false" displaycommonoperate="false">
            <to-phase-id id="Assessor" role="dealPerformer@" condition="${operateType}==3" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="草稿派单"/>
        </phase-id>
        <phase-id id="RejectTask" name="被驳回" type="operate" displaytransferaudit="false" displayconfirm="false"
                  displayreject="false" displaycommonoperate="false">
            <to-phase-id id="Assessor" role="dealPerformer@" condition="${operateType}==54" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="重新派单"/>
        </phase-id>
        <phase-id id="HoldTask" name="归档" type="operate" displaytransferaudit="false" displayconfirm="false"
                  displayreject="false" displaycommonoperate="false"/>
        <phase-id id="Assessor" name="审核" type="operate" displaytransferaudit="true" displayconfirm="true"
                  displayreject="true" displaycommonoperate="true">
            <to-phase-id id="RejectTask" role="dealPerformer@" condition="${operateType}==4" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="驳回"/>
            <to-phase-id id="HoldTask" role="dealPerformer@" condition="${operateType}==200" operatetype=""
                         stepdisplay="true" workflowdisplay="false" isrejecttask="false" roleid="" commonoperatetype=""
                         name="审核通过"/>
        </phase-id>
    </flow-define>
</WorkFlowRule>

