<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans> 
		
		<form-bean
      name="modifyTimeForm"
      type="com.boco.eoms.sheet.modifytime.webapp.form.ModifyTimeForm"
      />
	</form-beans>
	 <!-- ========== Global Exceptions Definitions =================================== -->
      <global-exceptions>
        <exception type="java.lang.Exception"
            key="errors.general"
            handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
      <global-forwards>
        <forward name="search" path="/search.do" redirect="true"/>
        <!-- Forwards specified in actions -->        
        <forward name="addUser" path="/editUser.do?method=Add&amp;amp;from=list" redirect="true"/>
        <forward name="cancelUser" path="/editUser.do?method=Cancel"/>
        <forward name="deleteUser" path="/editUser.do?method=Delete"/>
        <forward name="updateUser" path="/userProfile.do"/>
        <!-- Forwards for links used in Menu -->
        <forward name="editProfile" path="/editProfile.do"/>
        <forward name="editUser" path="/editUser.do"/>
        <forward name="viewUsers" path="/users.do" redirect="true"/>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
    </global-forwards>


	<!-- ========== Action Mapping Definitions =================================== -->


<action-mappings>
   <action
      path="/modifyTime"
      type="com.boco.eoms.sheet.modifytime.webapp.action.ModifyTimeAction"
      name="modifyTimeForm"
      scope="request"
      input="list"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeForm.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="list"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeList.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="search"
        path="/modifyTime.do"
        redirect="true"
        contextRelative="true"
      />
      <forward
        name="error"
        path="/common/failure.jsp"
        redirect="false"
        contextRelative="true"
      />
    </action>
    <action
      path="/editModifyTime"
      type="com.boco.eoms.sheet.modifytime.webapp.action.ModifyTimeAction"
      name="modifyTimeForm"
      scope="request"
      input="edit"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeForm.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="list"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeList.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="search"
        path="/modifyTime.do"
        redirect="true"
        contextRelative="true"
      />
    </action>
    <action
      path="/saveModifyTime"
      type="com.boco.eoms.sheet.modifytime.webapp.action.ModifyTimeAction"
      name="modifyTimeForm"
      scope="request"
      input="edit"
      parameter="method"
      unknown="false"
      validate="true"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeForm.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="list"
        path="/WEB-INF/pages/wfworksheet/modifytime/modifyTimeList.jsp"
        redirect="false"
        contextRelative="true"
      />
      <forward
        name="search"
        path="/modifyTime.do"
        redirect="true"
        contextRelative="true"
      />
    </action>
	</action-mappings>
	
 <controller nocache="true" inputForward="true" maxFileSize="2M"/>

      <message-resources parameter="config/ApplicationResources"/>
	<message-resources parameter="config/ApplicationResources-sheet-modifytimeForm"
		key="modifytimeForm" />

      <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config>
