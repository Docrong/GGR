<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config> 

	<!-- ========== Data Sources Definitions =================================== -->
	<!--
		Define your Struts data sources in a file called struts-data-sources.xml and place
		it in your merge directory.
	-->

	<!-- ========== Form Bean Definitions =================================== -->
	<form-beans>
		<form-bean
       name="statForm"
       type="com.boco.eoms.commons.statistic.base.webapp.form.StatForm"
    /> 
   
	</form-beans>

	<!-- ========== Global Exceptions Definitions =================================== -->
	<global-exceptions>
		<exception type="java.lang.Exception" key="errors.general"
			handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler" />
	</global-exceptions>

	<!-- ========== Global Forward Definitions =================================== -->
	<global-forwards>
		<forward name="selectFile" path="/selectFile.do" />
		<forward name="logout" path="/logout.jsp" />
      	<forward
          name="fail"
          path="/common/fail.jsp"
          redirect="false"
          contextRelative="true"
      	/>
	</global-forwards>

	<!-- ========== Action Mapping Definitions =================================== -->
	<action-mappings>
		<action path="/stat"
			type="com.boco.eoms.commons.statistic.netchange.webapp.action.NetchangeAction"
			name="statForm" scope="request" parameter="method"
			unknown="false" validate="false" attribute="netchangeStatMethod"> 
			<set-property property="cancellable" value="true" />
				
			<!-- 显示工单结果页面 -->
		      <forward name="statisticresult" 
				  path="/WEB-INF/pages/statistic/common/resultHtml.jsp" redirect="false"
				  contextRelative="true"/>
			 
			  
			
			<!-- 显示工单查询页面 -->
		      <forward name="std_statistic" 
				  path="/WEB-INF/pages/statistic/netchange/std/statistic.jsp" redirect="false"
				  contextRelative="true"/>
				  <!-- 李智添加网络综合调整KPI1  -->
			  <forward name="onetimepass_statistic_kpi1" 
				  path="/WEB-INF/pages/statistic/netchange/onetimepass/statistic.jsp" redirect="false"
				  contextRelative="true"/>
				  
			  <forward name="efficiency_statistic_kpi3" 
				  path="/WEB-INF/pages/statistic/netchange/efficiency/statistic.jsp" redirect="false"
				  contextRelative="true"/>
				  
			  <forward name="succeed_statistic_kpi4" 
				  path="/WEB-INF/pages/statistic/netchange/succeed/statistic.jsp" redirect="false"
				  contextRelative="true"/>
				  
			  <forward name="intime_statistic_kpi5" 
				  path="/WEB-INF/pages/statistic/netchange/intime/statistic.jsp" redirect="false"
				  contextRelative="true"/>
				
			
			 <!-- 显示地州统计工单详细信息页面 sheet-->
		      <forward name="std_statisticsheetlist"
			      path="/WEB-INF/pages/statistic/netchange/std/list.jsp" redirect="false"
		          contextRelative="true" /> 
		           <!-- 李智添加网络综合调整KPI1 oracle -->
		      <forward name="onetimepass_statisticsheetlist_kpi1"
			      path="/WEB-INF/pages/statistic/netchange/onetimepass/list.jsp" redirect="false"
		          contextRelative="true" />
		          
		      <forward name="efficiency_statisticsheetlist_kpi3"
			      path="/WEB-INF/pages/statistic/netchange/efficiency/list.jsp" redirect="false"
		          contextRelative="true" />
		          
		      <forward name="succeed_statisticsheetlist_kpi4"
			      path="/WEB-INF/pages/statistic/netchange/succeed/list.jsp" redirect="false"
		          contextRelative="true" />
		      
		      <forward name="intime_statisticsheetlist_kpi5"
			      path="/WEB-INF/pages/statistic/netchange/intime/list.jsp" redirect="false"
		          contextRelative="true" />
		          
		       
    	</action>
		
	</action-mappings>

	<controller nocache="true" inputForward="true" maxFileSize="2M" />

	<message-resources parameter="config/statistic/urgentfault-config/ApplicationResources-statistic-urgentfault"
		key="statisticurgentfault" />
	<message-resources parameter="config/statistic/base-config/ApplicationResources-statistic"
		key="statistic" />
	<message-resources parameter="config/statistic/task-config/ApplicationResources-statistic-task"
		key="statistictask" />
	<!-- ========== Validator plugin ===================  -->
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml" />
	</plug-in>

</struts-config>