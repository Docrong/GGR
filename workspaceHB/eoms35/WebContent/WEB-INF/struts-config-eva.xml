<struts-config>
    <form-beans>
        <form-bean
                name="evaTreeForm"
                type="com.boco.eoms.eva.webapp.form.EvaTreeForm"
        />
        <form-bean
                name="evaKpiForm"
                type="com.boco.eoms.eva.webapp.form.EvaKpiForm"
        />
        <form-bean
                name="evaTemplateForm"
                type="com.boco.eoms.eva.webapp.form.EvaTemplateForm"
        />
        <form-bean
                name="evaTaskForm"
                type="com.boco.eoms.eva.webapp.form.EvaTaskForm"
        />
        <form-bean
                name="evaKpiInstanceForm"
                type="com.boco.eoms.eva.webapp.form.EvaKpiInstanceForm"
        />
        <form-bean
                name="evaAuditForm"
                type="com.boco.eoms.eva.webapp.form.EvaAuditForm"
        />
        <form-bean
                name="evaKpiInstanceForm"
                type="com.boco.eoms.eva.webapp.form.EvaKpiInstanceForm"
        />
        <form-bean
                name="evaReportMultiDeptForm"
                type="com.boco.eoms.eva.webapp.form.EvaReportMultiDeptForm"
        />
