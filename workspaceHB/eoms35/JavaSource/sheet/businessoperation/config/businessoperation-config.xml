<?xml version="1.0" encoding="utf-8"?>
<WorkFlowRule name="BusinessOperation" description="新业务正式实施流程">
    <flow-define id="BusinessOperationProcess" description="新业务正式实施流程">
        <phase-id id="receive" type="receive">
            <to-phase-id id="operate" role="dealPerformer@221" condition="${operateType}==0" name="新建派发"/>
            <to-phase-id id="draft" role="dealPerformer@204" condition="${operateType}==22" name="保存草稿"/>
        </phase-id>
        <phase-id id="draft" name="草稿" type="operate">
            <to-phase-id id="operate" role="dealPerformer@221" condition="${operateType}==3" name="草稿派发"/>
        </phase-id>
        <phase-id id="reject" name="被驳回" type="operate">
            <to-phase-id id="operate" role="dealPerformer@221" condition="${operateType}==54" name="重新派发"/>
        </phase-id>
        <phase-id id="operate" name="实施" type="operate">
            <to-phase-id id="refine" role="" condition="${operateType}==91" name="规程制定"/>
            <to-phase-id id="reject" role="" condition="${operateType}==90" name="驳回"/>
        </phase-id>
        <phase-id id="refine" name="规程制定" type="operate">
            <to-phase-id id="prepare" role="dealPerformer@222" condition="${operateType}==92" name="交维准备"/>
            <to-phase-id id="operate" role="dealPerformer@221" condition="${operateType}==4" name="驳回实施"/>
        </phase-id>
        <phase-id id="prepare" name="交维准备" type="operate">
            <to-phase-id id="report" role="dealPerformer@223" condition="${operateType}==93" name="维护"/>
            <to-phase-id id="refine" role="dealPerformer@222" condition="${operateType}==4" name="驳回规程制定"/>
        </phase-id>
        <phase-id id="report" name="维护" type="operate">
            <to-phase-id id="hold" role="dealPerformer@204" condition="${operateType}==94" name="归档"/>
            <to-phase-id id="prepare" role="dealPerformer@221" condition="${operateType}==4" name="驳回交维准备"/>
        </phase-id>
        <phase-id id="hold" name="归档" type="operate">
        </phase-id>
    </flow-define>
</WorkFlowRule>