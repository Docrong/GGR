<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

    <!-- ========== Data Sources Definitions =================================== -->
    <!--
        Define your Struts data sources in a file called struts-data-sources.xml and place
        it in your merge directory.
    -->

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="multiPageForm"
                   type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm"/>
        <!--bean for EsmProcess end-->
    </form-beans>

    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception" key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward name="error"
                 path="/WEB-INF/pages/businesssupport/serviceprepare/sheet_fail.jsp"
                 contextRelative="true"/>
        <forward name="nopriv"
                 path="/sheetPriv.jsp"
                 contextRelative="true"/>
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <action path="/serviceprepare"
                type="com.boco.eoms.businessupport.serviceprepare.webapp.action.ServicePrepareAction"
                name="multiPageForm" scope="request" input="error" parameter="method"
                unknown="false" validate="false" attribute="ServicePrepare">
            <set-property property="cancellable" value="true"/>
            <forward name="showServiceConfiguration"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/showServiceConfigurationPage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="showServiceConfigurationDetailPage"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/showServiceConfigurationDetailPage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="addServiceConfigurationPage"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/addServiceConfigurationPage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="addsuccess"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/add_success.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="showEditProductSpecification"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/showEditProductSpecificationPage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="editsuccess"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/edit_success.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="showProductSpecificationList"
                     path="/WEB-INF/pages/businesssupport/serviceprepare/showProductSpecificationList.jsp"
                     redirect="false" contextRelative="true"/>
        </action>

    </action-mappings>

    <controller nocache="true" inputForward="true" maxFileSize="2M"/>
    <message-resources parameter="config/ApplicationResources-sheet"
                       key="sheet"/>
    <message-resources
            parameter="config/ApplicationResources-sheet-serviceprepare" key="serviceprepare"/>
    <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>