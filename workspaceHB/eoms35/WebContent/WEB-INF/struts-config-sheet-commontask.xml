<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

    <!-- ========== Data Sources Definitions =================================== -->
    <!--
        Define your Struts data sources in a file called struts-data-sources.xml and place
        it in your merge directory.
    -->

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="multiPageForm"
                   type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm"/>
        <!--bean for EsmProcess end-->
    </form-beans>

    <!-- ========== Global Exceptions Definitions =================================== -->
    <global-exceptions>
        <exception type="java.lang.Exception" key="errors.general"
                   handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =================================== -->
    <global-forwards>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
        <forward name="error"
                 path="/WEB-INF/pages/wfworksheet/common/sheet_fail.jsp"
                 contextRelative="true"/>
    </global-forwards>

    <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <action path="/commontask"
                type="com.boco.eoms.sheet.commontask.webapp.action.CommonTaskAction"
                name="multiPageForm" scope="request" input="error" parameter="method"
                unknown="false" validate="false" attribute="CommonTask">
            <set-property property="cancellable" value="true"/>
            <forward name="new"
                     path="/WEB-INF/pages/wfworksheet/commontask/main.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="inputNew"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputmain.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="dealpage"
                     path="/WEB-INF/pages/wfworksheet/commontask/dealpage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="inputDealpage"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputdealpage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="reject"
                     path="/WEB-INF/pages/wfworksheet/commontask/reject.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="inputReject"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputreject.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="detail"
                     path="/WEB-INF/pages/wfworksheet/commontask/detail.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="draft"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputmain.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="cancel"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputmain.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="delete"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputmain.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="hold"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputmain.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="list"
                     path="/WEB-INF/pages/wfworksheet/commontask/list.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="success"
                     path="/WEB-INF/pages/wfworksheet/common/sheet_success.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="successMessage"
                     path="/WEB-INF/pages/wfworksheet/common/successMessage.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="portal"
                     path="/WEB-INF/pages/wfworksheet/commontask/portal.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="split"
                     path="/WEB-INF/pages/wfworksheet/commontask/split.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="history"
                     path="/WEB-INF/pages/wfworksheet/commontask/history.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="draw"
                     path="/WEB-INF/pages/wfworksheet/commontask/draw.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="pic"
                     path="/WEB-INF/pages/wfworksheet/commontask/pic.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="holdlist"
                     path="/WEB-INF/pages/wfworksheet/commontask/mainlist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="mainlist"
                     path="/WEB-INF/pages/wfworksheet/commontask/mainlist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="startlist"
                     path="/WEB-INF/pages/wfworksheet/commontask/mainlist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="maindetail"
                     path="/WEB-INF/pages/wfworksheet/commontask/detail.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="query"
                     path="/WEB-INF/pages/wfworksheet/commontask/query.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="queryInput"
                     path="/WEB-INF/pages/wfworksheet/commontask/queryinput.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="querylist"
                     path="/WEB-INF/pages/wfworksheet/commontask/querylist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="templates"
                     path="/WEB-INF/pages/wfworksheet/commontask/templates.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="dealTemplates"
                     path="/WEB-INF/pages/wfworksheet/commontask/dealTemplates.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="dealTemplateDetail"
                     path="/WEB-INF/pages/wfworksheet/commontask/dealTemplateDetail.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="statisticsheetlist"
                     path="/WEB-INF/pages/wfworksheet/commontask/statistic/statisticsheetlist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="statistic"
                     path="/WEB-INF/pages/wfworksheet/commontask/statistic/statistic.jsp"
                     redirect="false" contextRelative="true"/>
