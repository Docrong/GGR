                     path="/WEB-INF/pages/wfworksheet/commontask/transfer.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="forceHold"
                     path="/WEB-INF/pages/wfworksheet/commontask/forceHold.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="adminlist"
                     path="/WEB-INF/pages/wfworksheet/commontask/adminlist.jsp" redirect="false"
                     contextRelative="true"/>
            <forward name="event"
                     path="/WEB-INF/pages/wfworksheet/commontask/event.jsp" redirect="false"
                     contextRelative="true"/>
            <forward name="inputEvent"
                     path="/WEB-INF/pages/wfworksheet/commontask/inputevent.jsp"
                     redirect="false" contextRelative="true"/>

            <forward name="saveInfo" path="/commontask.do?method=showDetailPage"/>
            <forward name="saveInfoAndExit" path="/commontask.do?method=showListsendundo"/>

            <forward name="cancellist"
                     path="/WEB-INF/pages/wfworksheet/commontask/mainlist.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="remark"
                     path="/WEB-INF/pages/wfworksheet/commontask/remark.jsp"
                     redirect="false" contextRelative="true"/>
            <forward name="phaseBackToUp"
                     path="/WEB-INF/pages/wfworksheet/commontask/phaseBackToUp.jsp"
                     redirect="false" contextRelative="true"/>
