<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

	<!-- ========== Data Sources Definitions =================================== -->
	<!--
		Define your Struts data sources in a file called struts-data-sources.xml and place
		it in your merge directory.
	-->

	<!-- ========== Form Bean Definitions =================================== -->
	<form-beans>
		<form-bean name="multiPageForm"
			type="com.boco.eoms.sheet.base.webapp.form.MultiPageForm" />
		<!--bean for EsmProcess end-->
	</form-beans>

	<!-- ========== Global Exceptions Definitions =================================== -->
	<global-exceptions>
		<exception type="java.lang.Exception" key="errors.general"
			handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler" />
	</global-exceptions>

	<!-- ========== Global Forward Definitions =================================== -->
	<global-forwards>
		<forward name="selectFile" path="/selectFile.do" />
		<forward name="logout" path="/logout.jsp" />
		<forward name="error"
			path="/WEB-INF/pages/wfworksheet/common/sheet_fail.jsp"
			contextRelative="true" />
	</global-forwards>

	<!-- ========== Action Mapping Definitions =================================== -->
	<action-mappings>
		<action path="/supervisetask"
			type="com.boco.eoms.sheet.supervisetask.webapp.action.SuperviseTaskAction"
			name="multiPageForm" scope="request" input="error" parameter="method"
			unknown="false" validate="false" attribute="SuperviseTask">
			<set-property property="cancellable" value="true" />
			<forward name="supervisetaskRuleAdd" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRuleAdd.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskRuleList" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRuleList.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskRuleEdit" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRuleEdit.jsp"
				redirect="false" contextRelative="true"></forward>	
			<forward name="supervisetaskRuleView" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRuleView.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskRecordView" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRecordView.jsp"
				redirect="false" contextRelative="true"></forward>	
			<forward name="supervisetaskRecordList" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskRecordList.jsp"
				redirect="false" contextRelative="true"></forward>
			
			<forward name="supervisetaskBoard" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoard.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskBoardDetail2" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoardDetail2.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskBoardDetail3" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoardDetail3.jsp"
				redirect="false" contextRelative="true"></forward>
				
			<forward name="supervisetaskBoardCount" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoardCount.jsp"
				redirect="false" contextRelative="true"></forward>
			<forward name="supervisetaskBoardCountPerson" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoardCountPerson.jsp"
				redirect="false" contextRelative="true"></forward>	
			<forward name="supervisetaskBoardMainAdd" path="/WEB-INF/pages/wfworksheet/supervisetask/supervisetaskBoardMainAdd.jsp"
				redirect="false" contextRelative="true"></forward>	
		 </action>
	</action-mappings>

	<controller nocache="true" inputForward="true" maxFileSize="2M" />
</struts-config>