                unknown="false" validate="false" attribute="BusinessChange">
            <set-property property="cancellable" value="true"/>

            <forward name="new"
                     path="/WEB-INF/pages/wfworksheet/businesschange/main.jsp"
                     redirect="false" contextRelative="true"/>
