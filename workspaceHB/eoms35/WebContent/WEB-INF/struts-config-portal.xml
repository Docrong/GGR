<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

   
    <form-bean
      name="portalUnifyUserForm"
      type="com.boco.eoms.unifyuser.webapp.form.PortalUnifyUserForm"
    />
  
    <form-bean
      name="portalSysManageForm"
      type="com.boco.eoms.unifyuser.webapp.form.PortalSysManageForm"
    />
    
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
      <global-exceptions>
        <exception type="java.lang.Exception"
            key="errors.general"
            handler="com.boco.eoms.base.webapp.action.ActionExceptionHandler"/>
    </global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
      <global-forwards>
        <forward name="mainMenu" path="/mainMenu.do" redirect="true"/>
        <!-- Forwards specified in actions -->        
        <forward name="addUser" path="/editUser.do?method=Add&amp;amp;from=list" redirect="true"/>
        <forward name="cancelUser" path="/editUser.do?method=Cancel"/>
        <forward name="deleteUser" path="/editUser.do?method=Delete"/>
        <forward name="updateUser" path="/userProfile.do"/>
        <!-- Forwards for links used in Menu -->
        <forward name="editProfile" path="/editProfile.do"/>
        <forward name="editUser" path="/editUser.do"/>
        <forward name="viewUsers" path="/users.do" redirect="true"/>
        <forward name="selectFile" path="/selectFile.do"/>
        <forward name="logout" path="/logout.jsp"/>
    </global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/portalUnifyUsers"
      type="com.boco.eoms.unifyuser.webapp.action.PortalUnifyUserAction"
      name="portalUnifyUserForm"
      scope="request"
      input="mainMenu"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalUnifyUser/portalUnifyUserForm.jsp"
        redirect="false"
   
      />
      <forward
        name="list"
        path="/portalUnifyUser/portalUnifyUserList.jsp"
        redirect="false"
      
      />
      <forward
        name="search"
        path="/portalUnifyUsers.do"
        redirect="true"
      
      />
    </action>
    <action
      path="/editPortalUnifyUser"
      type="com.boco.eoms.unifyuser.webapp.action.PortalUnifyUserAction"
      name="portalUnifyUserForm"
      scope="request"
      input="list"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalUnifyUser/portalUnifyUserForm.jsp"
        redirect="false"
    
      />
      <forward
        name="list"
        path="/portalUnifyUser/portalUnifyUserList.jsp"
        redirect="false"

      />
      <forward
        name="search"
        path="/portalUnifyUsers.do"
        redirect="true"

      />
    </action>
    <action
      path="/savePortalUnifyUser"
      type="com.boco.eoms.unifyuser.webapp.action.PortalUnifyUserAction"
      name="portalUnifyUserForm"
      scope="request"
      input="edit"
      parameter="method"
      unknown="false"
      validate="true"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalUnifyUser/portalUnifyUserForm.jsp"
        redirect="false"

      />
      <forward
        name="list"
        path="/portalUnifyUser/portalUnifyUserList.jsp"
        redirect="false"
  
      />
      <forward
        name="search"
        path="/portalUnifyUsers.do"
        redirect="true"
      />
      
    </action>
   
<!-- portalsysmanage start -->
   <action
      path="/portalSysManages"
      type="com.boco.eoms.unifyuser.webapp.action.PortalSysManageAction"
      name="portalSysManageForm"
      scope="request"
      input="mainMenu"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalSysManage/portalSysManageForm.jsp"
        redirect="false"
      />
      <forward
        name="list"
        path="/portalSysManage/portalSysManageList.jsp"
        redirect="false"
      />
      <forward
        name="search"
        path="/portalSysManages.do"
        redirect="true"
      />
    </action>
    <action
      path="/editPortalSysManage"
      type="com.boco.eoms.unifyuser.webapp.action.PortalSysManageAction"
      name="portalSysManageForm"
      scope="request"
      input="list"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalSysManage/portalSysManageForm.jsp"
        redirect="false"
      />
      <forward
        name="list"
        path="/portalSysManage/portalSysManageList.jsp"
        redirect="false"
      />
      <forward
        name="search"
        path="/portalSysManages.do"
        redirect="true"
      />
    </action>
    <action
      path="/savePortalSysManage"
      type="com.boco.eoms.unifyuser.webapp.action.PortalSysManageAction"
      name="portalSysManageForm"
      scope="request"
      input="edit"
      parameter="method"
      unknown="false"
      validate="true"
    >
      <set-property
        property="cancellable"
        value="true"
      />
      <forward
        name="edit"
        path="/portalSysManage/portalSysManageForm.jsp"
        redirect="false"
      />
      <forward
        name="list"
        path="/portalSysManage/portalSysManageList.jsp"
        redirect="false"
      />
      <forward
        name="search"
        path="/portalSysManages.do"
        redirect="true"
      />
    </action>
<!-- portalsysmanage end -->

  </action-mappings>

  <controller nocache="true" inputForward="true" maxFileSize="2M"/>

	<message-resources parameter="config/ApplicationResources-portal" />
      <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>
