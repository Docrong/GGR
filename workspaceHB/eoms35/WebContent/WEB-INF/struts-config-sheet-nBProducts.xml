<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="userForm"
      type="com.boco.eoms.base.webapp.form.UserForm"
    />
    <form-bean
      name="addressForm"
      type="com.boco.eoms.base.webapp.form.AddressForm"
    />
    <form-bean
      name="roleForm"
      type="com.boco.eoms.base.webapp.form.RoleForm"
    />
    <form-bean
      name="uploadForm"
      type="com.boco.eoms.base.webapp.form.UploadForm"
    />
    <form-bean
      name="nbproductsForm"
      type="com.boco.eoms.sheet.nbproducts.webapp.form.NBProductsForm"
    />

    <!--
         If you have non XDoclet forms, define them in a file called struts-forms.xml and
         place it in your merge directory.
    -->
  </form-beans>


   <action-mappings>
    
   
    <action
      path="/nbproductss"
      type="com.boco.eoms.sheet.nbproducts.webapp.action.NBProductsAction"
      name="nbproductsForm"
      scope="request"
      input="listjsp"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <set-property
        property="cancellable"
        value="true"
      />
    
      <forward
        contextRelative="true"
        name="formjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/nbproductsForm.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="listjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/nbproductsList.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="sheetList"
        path="/WEB-INF/pages/wfworksheet/nbproducts/sheetlist.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="detail"
        path="/WEB-INF/pages/wfworksheet/nbproducts/detail.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="deleteddetailjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/deleteddetail.jsp"
        redirect="false"
      />
     <forward
        contextRelative="true"
        name="deletedlistjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/deletedList.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="deletefailurejsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/delete_fail.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="deletesuccessjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/delete_success.jsp"
        redirect="false"
      />
     <forward
        contextRelative="true"
        name="savefailurejsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/sheet_fail.jsp"
        redirect="false"
      />
      <forward
        contextRelative="true"
        name="savesuccessjsp"
        path="/WEB-INF/pages/wfworksheet/nbproducts/sheet_success.jsp"
        redirect="false"
      />
    </action>
    <!-- Action to flush cache -->
    <action path="/flush" type="org.apache.struts.actions.ForwardAction"
        parameter="/WEB-INF/pages/backup/flushCache.jsp" roles="admin"/>

    <!-- Forward to page to begin file upload -->
    <action path="/selectFile" type="org.apache.struts.actions.ForwardAction"
        parameter="/WEB-INF/pages/backup/uploadForm.jsp"/>
    <!-- Forward to view Active Users -->
    <action path="/activeUsers" type="org.apache.struts.actions.ForwardAction"
        parameter="/WEB-INF/pages/backup/activeUsers.jsp" roles="admin"/>

  </action-mappings>

  <controller nocache="true" inputForward="true" maxFileSize="2M"/>
      <message-resources parameter="config/ApplicationResources" key="common"/>
      <message-resources parameter="config/ApplicationResources-sheet-nbproducts" key="sheet"/>
      <message-resources parameter="config/ApplicationResources-sheet-nbproducts" key="nbproducts"/>

      <!-- ========== Validator plugin ===================  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-rules-custom.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>
