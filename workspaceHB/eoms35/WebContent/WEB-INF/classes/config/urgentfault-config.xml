<?xml version="1.0" encoding="utf-8"?>
<WorkFlowRule name="UrgentFault" description="重大故障流程">
   <flow-define id="UrgentFaultMainFlowProcess" description="重大故障工单">
     <phase-id id="receive" type="receive">
        <to-phase-id id="MiddleReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==91" name="事中上报"/>
        <to-phase-id id="BackReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==92" name="事后上报"/>    
     	<to-phase-id id="DraftHumTask" role="" condition="${operateType}==22" name="保存草稿"/>
     </phase-id>
     <phase-id id="DraftHumTask" name="草稿" type="operate">       
       <to-phase-id id="MiddleReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==91" name="事中上报"/>
       <to-phase-id id="BackReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==92" name="事后上报"/>
     </phase-id>
     <phase-id id="BackHumTask" name="驳回" type="operate">       
       <to-phase-id id="MiddleReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==91" name="事中上报"/>
       <to-phase-id id="BackReportAffirmHumTask" role="dealPerformer@196" condition="${operateType}==92" name="事后上报"/>
     </phase-id>       
     <phase-id id="MiddleReportAffirmHumTask" name="报障待确认" type="operate">       
       <to-phase-id id="SolveFaultHumTask" role="" condition="${operateType}==913" name="报障确认"/>
       <to-phase-id id="BackHumTask" role="" condition="${operateType}==914" name="报障驳回"/>
     </phase-id>     
     <phase-id id="SolveFaultAffirmHumTask" name="销障待确认" type="operate">
       <to-phase-id id="ReportHumTask" role="" condition="${operateType}==933" name="销障确认"/>  
       <to-phase-id id="SolveFaultHumTask" role="" condition="${operateType}==934" name="销障驳回"/>     
     </phase-id>
     <phase-id id="BackReportAffirmHumTask" name="上报待确认" type="operate">
     	<to-phase-id id="ReportHumTask" role="" condition="${operateType}==923" name="上报确认"/>
     	<to-phase-id id="BackHumTask" role="" condition="${operateType}==924" name="上报驳回"/>
     </phase-id>
     <phase-id id="SolveFaultHumTask" name="待销障" type="operate">
     	<to-phase-id id="SolveFaultAffirmHumTask" role="" condition="${operateType}==93" name="销障上报"/>
     </phase-id>
     <phase-id id="ReportHumTask" name="报告中" type="operate">
		<to-phase-id id="SumUpHumTask" role="" condition="${operateType}==94" name="完成报告"/>
     </phase-id>
     <phase-id id="SumUpHumTask" name="总结中" type="operate">
       <to-phase-id id="HoldHumTask" role="" condition="${operateType}==95" name="完成总结"/>      
     </phase-id>
     <phase-id id="HoldHumTask" name="归档" type="operate"> 
     </phase-id>
  </flow-define>
</WorkFlowRule>