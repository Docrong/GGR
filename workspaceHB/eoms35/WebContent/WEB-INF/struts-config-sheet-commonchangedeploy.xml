					path="/WEB-INF/pages/wfworksheet/common/sheet/split.jsp"
					redirect="false" contextRelative="true" />
				<forward name="newShowInputConfirmAndCCPage" 
			        path="/WEB-INF/pages/wfworksheet/common/sheet/showConfirmAndCCPage.jsp"
			        redirect="false" contextRelative="true"/>
			     <forward name="newSheetAccessories" 
			        path="/WEB-INF/pages/wfworksheet/common/sheet/sheetAccessories.jsp"
			        redirect="false" contextRelative="true"/>
			     <forward name="newRemark"
					path="/WEB-INF/pages/wfworksheet/common/sheet/remark.jsp" 
					redirect="false" contextRelative="true" />
				 <forward name="newQuerylist"
			        path="/WEB-INF/pages/wfworksheet/common/sheet/querylist.jsp"
			        redirect="false" contextRelative="true" />
