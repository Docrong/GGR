<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.boco.eoms.km.lesson.model.KmLesson"
           table="KM_LESSON">

        <id name="id" column="id" unsaved-value="null">
            <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
            <generator class="uuid.hex"></generator>
        </id>

        <property name="createUser" column="CREATE_USER" length="32"
                  not-null="false" unique="false">
        </property>

        <property name="createTime" column="CREATE_TIME" length="32"
                  not-null="false" unique="false">
        </property>

        <property name="lessonName" column="LESSON_NAME" length="100"
                  not-null="false" unique="false">
        </property>

        <property name="lessonTheme" column="LESSON_THEME" length="100"
                  not-null="false" unique="false">
        </property>

        <property name="lessonClass" column="LESSON_CLASS" length="32"
                  not-null="false" unique="false">
        </property>

        <property name="lessonContents" column="LESSON_CONTENTS"
                  length="4000" not-null="false" unique="false">
        </property>

        <property name="startTime" column="START_TIME" length="32"
                  not-null="false" unique="false">
        </property>

        <property name="endTime" column="END_TIME" length="32"
                  not-null="false" unique="false">
        </property>

        <property name="timeLength" column="TIME_LENGTH" length="100"
                  not-null="false" unique="false">
        </property>

        <property name="attachment" column="ATTACHMENT" length="100"
                  not-null="false" unique="false">
        </property>

        <property name="isDelete" column="IS_DELETE" length="32"
                  not-null="false" unique="false">
        </property>

    </class>

</hibernate-mapping>